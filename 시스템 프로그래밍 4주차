#include <stdio.h>
#include <string.h>

int main() {
    FILE* file;
    char filename[] = "d.txt";
    char searchWord[1000];
    char line[200];
    int lineNumber = 0;
    int wordCount = 0;

    file = fopen(filename, "r");

    if (file == NULL) {
        printf("파일을 열 수 없습니다.\n");
        return 1;
    }

    printf("검색할 단어를 입력하세요: ");
    scanf("%s", searchWord);

    while (fgets(line, sizeof(line), file)) {
        lineNumber++;

        if (strstr(line, searchWord) != NULL) {
            wordCount++;
            printf("{%d, %d} %s", lineNumber, wordCount, line); // 검색된 단어가 있는 라인 출력
        }
    }

    fclose(file);

    if (wordCount == 0) {
        printf("검색된 단어가 없습니다.\n");
    }
    else {
        printf("\n");
    }

    return 0;
}
