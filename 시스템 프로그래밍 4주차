#include <stdio.h>
#include <string.h>

int main() {
    FILE* file;
    char filename[] = "d.txt";
    char searchWord[1000];
    char line[200];
    int lineNumber = 0;
    int wordCount = 0;

    file = fopen(filename, "r");

    if (file == NULL) {
        printf("파일을 열 수 없습니다.\n");
        return 1;
    }

    printf("검색할 단어를 입력하세요: ");
    scanf("%s", searchWord);

    while (fgets(line, sizeof(line), file)) {
        lineNumber++;

        char* word = strtok(line, " \t\n"); // 공백 또는 탭을 구분자로 사용하여 단어를 분리
        while (word != NULL) {
            if (strcmp(word, searchWord) == 0) {
                wordCount++;
                printf("{%d, %d} ", lineNumber, wordCount);
            }
            word = strtok(NULL, " \t\n");
        }
    }

    fclose(file);

    if (wordCount == 0) {
        printf("검색된 단어가 없습니다.\n");
    }
    else {
        printf("\n");
    }

    return 0;
}
