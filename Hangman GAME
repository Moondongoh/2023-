import random

# í–‰ë§¨ ê²Œì„ ì œì‘

life = ['ğŸ’”ğŸ’”ğŸ’”ğŸ’”ğŸ’”ğŸ’”', 'ğŸ’”ğŸ’”ğŸ’”ğŸ’”ğŸ’”', 'ğŸ’”ğŸ’”ğŸ’”ğŸ’”', 'ğŸ’”ğŸ’”ğŸ’”', 'ğŸ’”ğŸ’”']

damage = 0  # ë¬¸ì œë¥¼ í‹€ë¦´ ë•Œë§ˆë‹¤ 1 ë°ë¯¸ì§€ì”© ë°›ìŠµë‹ˆë‹¤.

wordList = ["seoul", "busan", "incheon", "suwon", "jeju", "ulsan", "daegu", "gwangju", "mokpo"]  # ë‹¨ì–´ ë¦¬ìŠ¤íŠ¸

choiceWord = random.choice(wordList)  # wordListì—ì„œ ëœë¤ìœ¼ë¡œ ë‹¨ì–´ ì„ íƒ

display = "íŒíŠ¸: ëŒ€í•œë¯¼êµ­ ë„ì‹œ"  # ë‹¨ì–´ íŒíŠ¸ ì œê³µ

wordLen = len(choiceWord)  # ì„ ì •ëœ ë‹¨ì–´ì˜ ê¸¸ì´

# í‘œì‹œë¥¼ ê´€ë¦¬í•˜ê¸° ìœ„í•œ ëª©ë¡ ìƒì„±
display_list = ["_" for _ in range(wordLen)]

print("".join(display_list))  # í‘œì‹œë¥¼ ë¬¸ìì—´ë¡œ ë³€í™˜í•˜ì—¬ ì¶œë ¥

endGame = False  # ê²Œì„ ì¢…ë£Œ ì—¬ë¶€ë¥¼ ë‚˜íƒ€ë‚´ëŠ” ë³€ìˆ˜

while not endGame:
    playerInput = input("ë‹¨ì–´ì˜ ê¸€ìë¥¼ ì…ë ¥í•˜ì„¸ìš”(1ê¸€ì): ").lower()  # ì†Œë¬¸ì ì…ë ¥

    for wordPos in range(wordLen):
        word = choiceWord[wordPos]
        if word == playerInput:
            display_list[wordPos] = word

    if playerInput not in choiceWord:
        damage += 1  # ë¬¸ì œë¥¼ í‹€ë¦´ ë•Œë§ˆë‹¤ damageë¥¼ 1 ì¦ê°€ì‹œí‚µë‹ˆë‹¤.

    if damage >= 6:  # 6ë²ˆ í‹€ë¦¬ë©´ ê²Œì„ ì¢…ë£Œ
        endGame = True
        print("ëª©ìˆ¨ì´ ì—†ìŠµë‹ˆë‹¤!! ì‹¤íŒ¨!!")
        break

    if "_" not in display_list:
        endGame = True
        print("ë‹¨ì–´ë¥¼ ë§ì¶”ì…¨ìŠµë‹ˆë‹¤!! ì„±ê³µ!!")
        break

    print("".join(display_list))
    if damage < len(life):
        print(life[damage])