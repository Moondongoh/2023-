#include <stdio.h>
#include <string.h>

int main() {
    char a = 'a';
    char b = 'b';
    char c = 'c';

    int num1 = 1;
    int num2 = 2;
    int num3 = 3;

    char* Name = "freeasthewind";

    system("cls");

    printf("a를 출력:\n");
    printf("%c\t", a);
    printf("%x\t", a);
    printf("%d\n", a);

    printf("b를 출력:\n");
    printf("%c\t", b);
    printf("%x\t", b);
    printf("%d\n", b);

    printf("c를 출력:\n");
    printf("%c\t", c);
    printf("%x\t", c);
    printf("%d\n", c);

    printf("1을 출력:\n");
    printf("%c\t", '1');
    printf("%x\t", '1');
    printf("%d\n", '1'); 

    printf("2를 출력:\n");
    printf("%c\t", '2');
    printf("%x\t", '2');
    printf("%d\n", '2');

    printf("3을 출력:\n");
    printf("%c\t", '3');
    printf("%x\t", '3');
    printf("%d\n", '3');

    printf("문자열 Name 출력:\n");
    int i = 0;
    while (Name[i] != '\0') {
        printf("%c\t", Name[i]);
        printf("%x\t", Name[i]);
        printf("%d\n", Name[i]);
        i++;
    }

    printf("문자열 Name을 역순으로 출력:\n");
    for (int j = strlen(Name) - 1; j >= 0; j--) {
        printf("%c\t", Name[j]);
        printf("%x\t", Name[j]);
        printf("%d\n", Name[j]);
        i++;
    }
    printf("\n");

    return 0;
}
